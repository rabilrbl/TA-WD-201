<div class="flex items-center gap-2">
  <h5 class="text-xl font-bold"><%= todoTitle %></h5>
  <span id="<%= countid %>" class="bg-gray-600 rounded-full px-3 text-base"
    ><%= todos.length %></span
  >
</div>
<% todos.forEach(function(todo) { %>
<div
  class="flex justify-between items-center p-2 rounded-lg gap-2 hover:bg-gray-800 group overflow-y-hidden max-w-fit"
  id="div-todo-<%= todo.id %>"
>
  <!-- Checkbox -->
  <input class="h-5 w-5 rounded-full cursor-pointer"
  type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : ''
  %> onclick="updateTodo(<%= todo.id %>)" />
  <!-- Title -->
  <div class="flex-auto">
    <div class="flex items-center gap-2">
      <label for="todo-<%= todo.id %>" class="text-lg cursor-pointer"
        ><%= todo.title %></label
      >
      <span class="text-xs text-gray-500 ml-auto"
        ><%= new Date(todo.dueDate).toLocaleDateString() %></span
      >
      <!-- Delete button -->
      <button
        class="text-red-500 text-sm hidden group-hover:block"
        onclick="deleteTodo(<%= todo.id %>)"
      >
        <!-- Trash Can  -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
          />
        </svg>
      </button>
    </div>
  </div>
</div>
<% }) %>
